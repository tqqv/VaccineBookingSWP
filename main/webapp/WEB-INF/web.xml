<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controller.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>controller.registerController</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>tien</param-value>
        </init-param>
        <init-param>
            <param-name>pass</param-name>
            <param-value>123</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>timeRangeController</servlet-name>
        <servlet-class>controller.scheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vaccineController</servlet-name>
        <servlet-class>controller.vaccineController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminMangerController</servlet-name>
        <servlet-class>controller.AdminMangerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HospitalMangerController</servlet-name>
        <servlet-class>controller.HospitalMangerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserMangerController</servlet-name>
        <servlet-class>controller.UserMangerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>timeRangeController</servlet-name>
        <url-pattern>/timeRangeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vaccineController</servlet-name>
        <url-pattern>/vaccineController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMangerController</servlet-name>
        <url-pattern>/AdminMangerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HospitalMangerController</servlet-name>
        <url-pattern>/HospitalMangerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserMangerController</servlet-name>
        <url-pattern>/UserMangerController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--    <welcome-file-list>
        <welcome-file>timeRangeController</welcome-file>
    </welcome-file-list>-->
</web-app>
